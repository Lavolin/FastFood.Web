@model IList<FastFood.Web.ViewModels.Categories.CategoryAllViewModel>

@{
    ViewData["Title"] = "All Categories";
}
<h1 class="text-center">All Categories</h1>
<hr class="hr-2" />
<table class="table mx-auto">
    <thead>
        <tr class="row">
            <th class="col-md-1">#</th>
            <th class="col-md-2">Category</th>
        </tr>
    </thead>
    <tbody>
        <div class="container-fluid justify-content-center">
            @for (var i = 0; i < Model.Count(); i++)
            {
                <tr class="row">
                    <th class="col-md-1">@(i + 1)</th>
                    <td class="col-md-2">@Model[i].Name</td>
                </tr>
            }
        </div>
        <div class ="container-fluid justify-content-center">
            <a class="btn btn-success" asp-area="" asp-controller="Categories" asp-action="Create">Create</a>
        </div>

    </tbody>
</table>